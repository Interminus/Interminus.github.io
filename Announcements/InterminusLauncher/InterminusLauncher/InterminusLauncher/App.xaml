<Application x:Class="InterminusLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InterminusLauncher"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="robofont" TargetType="Label">
            <Setter Property="TextElement.FontFamily" 
                    Value="/Fonts/ROBOTECH GP.ttf #ROBOTECH GP">
            </Setter>
        </Style>
        <Style x:Key="robofonth" TargetType="Label">
            <Setter Property="TextElement.FontFamily" 
                    Value="/Fonts/ROBOTECH GP.ttf #ROBOTECH GP">
            </Setter>
        </Style>
        <Style x:Key="robofontb" TargetType="Button">
            <Setter Property="TextElement.FontFamily" 
                    Value="/Fonts/ROBOTECH GP.ttf #ROBOTECH GP">
            </Setter>
        </Style>
        <Style x:Key="robofontt" TargetType="Label">
            <Setter Property="TextElement.FontFamily" 
                    Value="/Fonts/ROBOTECH GP.ttf #ROBOTECH GP">
            </Setter>
            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
        </Style>
    </Application.Resources>
</Application>
